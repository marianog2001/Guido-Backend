<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Cart Page</title>
    </head>
    <body>
        <h1>Carrito de compras</h1>
    {{#if cartProducts.[0] }}
        <ul>
            {{#each cartProducts}}
                <li>
                    Producto: {{this.product.title}}
                    Cantidad: {{this.quantity}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No hay productos en el carrito</p>
    {{/if}}
    </body>
</html>